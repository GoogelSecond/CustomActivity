<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="clockStyle">@style/GlobalClockStyle</item>
    </style>

    <style name="DefaultClockStyle">
        <item name="hourHandColor">#0000FF</item>
        <item name="minuteHandColor">#000000</item>
        <item name="secondHandColor">#FF0000</item>

        <item name="hourHandLength">@dimen/hourHandLength</item>
        <item name="minuteHandLength">@dimen/minuteHandLength</item>
        <item name="secondHandLength">@dimen/secondHandLength</item>
    </style>

    <style name="GlobalClockStyle" parent="DefaultClockStyle" />

</resources>